# A very simple workflow with one stage and one step.
workflow:
    #dryrun: True
    stages:
        - stage1
    inputfiles: 
    outputfiles: [outputfile]

stage1:
    steps:
        - step1

step1:
    type: subprocesskernel
    configuration: echo {message} > {outputfile}
    inputfiles:
    outputfiles: [outputfile]

