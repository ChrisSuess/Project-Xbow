workflow:
    stages:
        - stage1

stage1:
    steps:
        - ix1
        - gromacs

ix1:
    type: interfacekernel
    configuration: 
        - repdir      ]= {repdirs}
        
gromacs:
    type: subprocesskernel
    configuration: >
        gmx mdrun -s {tprfile} -deffnm {repdir}/{deffnm}

inputs:
    - tprfile # Gromacs tpr file
    - deffnm # Default name for output files
    - repdirs # list of replicate subdirectory names
